{
    "version": "0.1.0",
    "echoCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "grunt",
            "command": "grunt",
            "args": ["default"],
            "problemMatcher": [
                "$lessCompile",
                "$jshint"
            ],
            "isShellCommand": true
        },
        {
            "taskName": "TypeScript",
            "problemMatcher": "$tsc",
            "command": "tsc",
            "args": ["-p", "."],
            "isBuildCommand": true,
            "isShellCommand": true
        }
    ]
}
